@using GroceryFinal.Model
@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            </hr>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ProductName" class="p-0"></label>
            <input asp-for="ProductName"  class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="UOM" class="p-0"></label>
            <input asp-for="UOM"  class="form-control" />
            <span asp-validation-for="UOM" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PurchaseRate" class="p-0"></label>
            <input asp-for="PurchaseRate" class="form-control" />
            <span asp-validation-for="PurchaseRate" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SellingRate" class="p-0"></label>
            <input asp-for="SellingRate" class="form-control" />
            <span asp-validation-for="SellingRate" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Stock" class="p-0"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PurchaseStock" class="p-0"></label>
            <input asp-for="PurchaseStock" class="form-control" />
            <span asp-validation-for="PurchaseStock" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SellingStock" class="p-0"></label>
            <input asp-for="SellingStock" class="form-control" />
            <span asp-validation-for="SellingStock" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ReorderLevel" class="p-0"></label>
            <input asp-for="ReorderLevel" class="form-control" />
            <span asp-validation-for="ReorderLevel" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Quantity" class="p-0"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control" >Create</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>
        
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}