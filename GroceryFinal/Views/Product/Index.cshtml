@using GroceryFinal.Model
@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product Details
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Product Id
        </th>
        <th>
            Product Name
        </th>
        <th>UOM</th>
        <th>Purchase Rate</th>
        <th>Selling Rate</th>
        <th>Stock</th>
        <th>Purchase Stock</th>
        <th>Selling Stock</th>
        <th>Reorder Level</th>
        <th>Reorder Quantity</th>
        <th>Supplier ID and Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.ProductId</td>
                <td>@obj.ProductName</td>
                <td>@obj.UOM</td>
                <td>@obj.PurchaseRate</td>
                <td>@obj.SellingRate</td>
                <td>@obj.Stock</td>
                <td>@obj.PurchaseStock</td>
                <td>@obj.SellingStock</td>
                <td>@obj.ReorderLevel</td>
                <td>@obj.Quantity</td>
                <td>@obj.SupplierId - @obj.Supplier.SupplierName</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>
</div>