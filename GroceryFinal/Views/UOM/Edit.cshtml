@using GroceryFinal.Model
@model UOM

<form method="post">
    <input asp-for="UOMId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit UOM</h2>
            </hr>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="UOMName" class="p-0"></label>
            <input asp-for="UOMName" class="form-control" />
            <span asp-validation-for="UOMName" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="UOM" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}