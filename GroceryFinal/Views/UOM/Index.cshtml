@using GroceryFinal.Model
@model List<UOM>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                UOM Details
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="UOM" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New UOM
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            UOM Id
        </th>
        <th>
            UOM Name
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.UOMId</td>
                <td>@obj.UOMName</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="UOM" asp-action="Edit" asp-route-id="@obj.UOMId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="UOM" asp-action="Delete" asp-route-id="@obj.UOMId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>
</div>