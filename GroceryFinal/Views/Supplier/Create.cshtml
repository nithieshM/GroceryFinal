@using GroceryFinal.Model
@model Supplier

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Supplier</h2>
            </hr>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierName" class="p-0"></label>
            <input asp-for="SupplierName"  class="form-control" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierAddress" class="p-0"></label>
            <input asp-for="SupplierAddress"  class="form-control" />
            <span asp-validation-for="SupplierAddress" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierAddress2" class="p-0"></label>
            <input asp-for="SupplierAddress2"  class="form-control" />
            <span asp-validation-for="SupplierAddress2" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierCity" class="p-0"></label>
            <input asp-for="SupplierCity"  class="form-control" />
            <span asp-validation-for="SupplierCity" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierState" class="p-0"></label>
            <input asp-for="SupplierState"  class="form-control" />
            <span asp-validation-for="SupplierState" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierZipCode" class="p-0"></label>
            <input asp-for="SupplierZipCode"  class="form-control" />
            <span asp-validation-for="SupplierZipCode" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierPhone" class="p-0"></label>
            <input asp-for="SupplierPhone"  class="form-control" />
            <span asp-validation-for="SupplierPhone" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupplierEmail" class="p-0"></label>
            <input asp-for="SupplierEmail"  class="form-control" />
            <span asp-validation-for="SupplierEmail" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control" >Create</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="SupplierDetails" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>
        
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}